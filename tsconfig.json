{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {},
    "rootDir": ".", // Ensure all source files are included
    "outDir": "./dist",
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "source/**/*.ts",
    "lib/mdweb/source/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}